@model IEnumerable<InmobiliariaWebApp.Models.Inmueble>

@{
    ViewData["Title"] = "Búsqueda de Inmuebles";
}

<h1>Busqueda de Inmuebles Disponibles</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Buscar" method="post">
            <div class="row align-items-end">
                <div class="form-group col-md-3">
                    <label for="fechaInicio" class="control-label">Disponible desde:</label>
                    <input name="fechaInicio" class="form-control" type="date" required/>
                </div>
                <div class="form-group col-md-3">
                    <label for="fechaFin" class="control-label">Disponible hasta:</label>
                    <input name="fechaFin" class="form-control" type="date" required/>
                </div>
                <div class="form-group col-md-2">
                    <label for="tipoInmuebleId" class="control-label">Tipo</label>
                    <select name="tipoInmuebleId" class="form-control" asp-items="ViewBag.TipoInmuebleId">
                        <option value="0">-- Todos --</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="precioMin" class="control-label">Precio Mín.</label>
                    <input name="precioMin" class="form-control" type="number" step="0.01" />
                </div>
                <div class="form-group col-md-2">
                    <label for="precioMax" class="control-label">Precio Máx.</label>
                    <input name="precioMax" class="form-control" type="number" step="0.01" />
                </div>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />

@if (Model != null)
{
    <h3>Resultados de la Búsqueda</h3>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Dirección</th>
                    <th>Uso</th>
                    <th>Tipo</th>
                    <th>Ambientes</th>
                    <th>Precio</th>
                    <th>Dueño</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Direccion</td>
                        <td>@item.Uso</td>
                        <td>@item.Tipo?.Nombre</td>
                        <td>@item.Ambientes</td>
                        <td>@item.Precio</td>
                        <td>@item.Dueño?.NombreCompleto</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No se encontraron inmuebles con los criterios especificados.</p>
    }
}