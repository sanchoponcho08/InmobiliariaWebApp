@model InmobiliariaWebApp.Models.Pago

@{
    ViewData["Title"] = "Anular Pago";
}

<h1>Anular Pago</h1>
<h3>¿Estas seguro de que quieres anular este pago?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NumeroPago)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NumeroPago)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaPago)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaPago)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Importe)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Importe)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Anulación" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.ContratoId">Cancelar</a>
    </form>
</div>