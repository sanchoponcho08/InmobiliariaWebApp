@model IEnumerable<InmobiliariaWebApp.Models.TipoInmueble>

@{
    ViewData["Title"] = "Tipos de Inmueble";
}

<h1>Tipos de Inmueble</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Tipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>