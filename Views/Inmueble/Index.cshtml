@model IEnumerable<InmobiliariaWebApp.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<h1>Listado de Inmuebles</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Cargar Nuevo Inmueble</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Uso)</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.Disponible)</th>
            <th>Dueño</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
            <td>@Html.DisplayFor(modelItem => item.Uso)</td>
            <td>@Html.DisplayFor(modelItem => item.Tipo.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
            <td>@(item.Disponible ? "Sí" : "No")</td>
            <td>@Html.DisplayFor(modelItem => item.Dueño.Nombre) @Html.DisplayFor(modelItem => item.Dueño.Apellido)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>