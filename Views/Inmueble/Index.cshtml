@model IEnumerable<InmobiliariaWebApp.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-create">Cargar Nuevo Inmueble</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Uso)</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.Disponible)</th>
            <th>Dueño</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
            <td>@Html.DisplayFor(modelItem => item.Uso)</td>
            <td>@(item.Tipo?.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
            <td>@String.Format("{0:C}", item.Precio)</td>
            <td class="text-center">
                @if(item.Disponible)
                {
                    <span class="badge bg-success">Sí</span>
                }
                else
                {
                    <span class="badge bg-danger">No</span>
                }
            </td>
            <td>@(item.Dueño?.Nombre) @(item.Dueño?.Apellido)</td>
            <td class="action-buttons">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details btn-sm">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
