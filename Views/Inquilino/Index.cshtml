@model IEnumerable<InmobiliariaWebApp.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<div class="container">
    <h1 class="display-4">Inquilinos</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Inquilino</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)</h5>
                        <p class="card-text">DNI: @Html.DisplayFor(modelItem => item.Dni)</p>
                        <p class="card-text">TelÃ©fono: @Html.DisplayFor(modelItem => item.Telefono)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
