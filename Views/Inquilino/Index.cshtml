@model IEnumerable<InmobiliariaWebApp.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-create">Crear Nuevo Inquilino</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)</h5>
                    <hr>
                    <p class="card-text mb-1"><strong>DNI:</strong> @Html.DisplayFor(modelItem => item.Dni)</p>
                    <p class="card-text"><strong>Tel√©fono:</strong> @Html.DisplayFor(modelItem => item.Telefono)</p>
                    <div class="mt-3 action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
