﻿@{
    ViewData["Title"] = "Página de Inicio";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a InmobiliariaWebApp</h1>
    <p>Tu solución completa para la gestión inmobiliaria.</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card text-center mb-4">
            <div class="card-body">
                <h5 class="card-title">Gestión de Inquilinos</h5>
                <p class="card-text">Administra la información de todos tus inquilinos de forma centralizada.</p>
                <a asp-controller="Inquilino" asp-action="Index" class="btn btn-primary">Ir a Inquilinos</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center mb-4">
            <div class="card-body">
                <h5 class="card-title">Gestión de Propietarios</h5>
                <p class="card-text">Mantén al día los datos y propiedades de cada propietario.</p>
                <a asp-controller="Propietario" asp-action="Index" class="btn btn-primary">Ir a Propietarios</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center mb-4">
            <div class="card-body">
                <h5 class="card-title">Gestión de Inmuebles</h5>
                <p class="card-text">Consulta y actualiza el catálogo de inmuebles disponibles.</p>
                <a asp-controller="Inmueble" asp-action="Index" class="btn btn-primary">Ir a Inmuebles</a>
            </div>
        </div>
    </div>
</div>
